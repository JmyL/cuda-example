{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Process",
            "type": "cppdbg",
            "request": "attach",
            "program": "${command:pickFile}",
            "cwd": "${workspaceFolder}",
            "processId": "${command:pickProcess}",
            "MIMode": "gdb",
            "externalConsole": false,
            "setupCommands": [
                {
                    "description": "Enable pretty printing",
                    "text": "set print pretty on"
                },
                {
                    "description": "Enable address printing",
                    "text": "set print address on"
                },
                {
                    "description": "Enable array printing",
                    "text": "set print array on"
                },
                {
                    "description": "Print all array elements",
                    "text": "set print elements 0"
                },
                {
                    "description": "Set output radix to hexadecimal",
                    "text": "set output-radix 16"
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${command:pickFile}",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "preLaunchTask": "",
            "miDebuggerArgs": "",
            "logging": {
                "engineLogging": false
            },
            "postDebugTask": "",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Stop on SIGSEGV",
                    "text": "handle SIGSEGV stop print pass",
                    "ignoreFailures": true
                },
                {
                    "description": "Stop on SIGFAULT",
                    "text": "handle SIGFAULT stop print pass",
                    "ignoreFailures": true
                }
            ],
            "targetArchitecture": "x86_64",
            "pipeTransport": null,
            "sourceFileMap": {},
            "launchCompleteCommand": "exec-run",
            "linux": {
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/bin/gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            },
            "osx": {
                "MIMode": "lldb",
                "miDebuggerPath": "/usr/bin/lldb"
            },
            "windows": {
                "MIMode": "gdb",
                "miDebuggerPath": "C:/mingw-w64/bin/gdb.exe",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            }
        }
    ]
}